<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="@color/light_green_disabled"
                android:endColor="@color/dark_green_disabled"
                android:angle="270" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/light_green2"
                android:endColor="@color/dark_green2"
                android:angle="270" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/light_orange"
                android:endColor="@color/dark_orange"
                android:angle="270" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/dark_green"
                android:angle="270" />
            <corners
                android:radius="3dip" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>
</selector>